{
  "schema": {
    "title": "Extending",
    "definitions": {
      "address": {
        "type": "object",
        "properties": {
          "street_address": {
            "title": "Address",
            "type": "string"
          },
          "city": {
            "title": "City",
            "type": "string"
          },
          "state": {
            "title": "State",
            "type": "string"
          }
        },
        "required": [
          "street_address",
          "city",
          "state"
        ]
      }
    },
    "type": "object",
    "properties": {
      "billing_address": {
        "title": "Billing Address",
        "$ref": "#/definitions/address"
      },
      "shipping_address": {
        "allOf": [
          {
            "title": "Shipping Address",
            "$ref": "#/definitions/address"
          },
          {
            "properties": {
              "type": {
                "title": "Type",
                "enum": [
                  "residential",
                  "business"
                ]
              }
            },
            "required": [
              "type"
            ]
          }
        ]
      }
    }
  }
}
